<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/justice" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:background="#CCB3B3B3"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/ius"
            android:text="sum"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/ius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="15dp"
            android:text="IUS"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="50dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_vps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:text="Vrijednost predmeta spora:"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textSize="21dp" />


        <EditText
            android:id="@+id/input_vps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal"
            android:layout_below="@+id/text_vps"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Unesi vps..."
            android:textSize="20dp"/>

        <Button
            android:id="@+id/button_calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IZRAČUNAJ"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_below="@+id/input_vps"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/text_bodovi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Broj bodova:"
            android:textSize="21dp"
            android:textStyle="bold"
            android:layout_below="@+id/button_calculate"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/broj_bodova"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:background="#403F3D"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/text_bodovi"
            android:layout_marginTop="10dp"
            android:textSize="21dp"/>

        <TextView
            android:id="@+id/text_nagrada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Odvjetnička nagrada:"
            android:textSize="21dp"
            android:textStyle="bold"
            android:layout_below="@+id/broj_bodova"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/nagrada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0,0 kn"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:background="#403F3D"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/text_nagrada"
            android:layout_marginTop="10dp"
            android:textSize="21dp"/>

    </RelativeLayout>

</RelativeLayout>